{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "booking/v0/booking.schema.json",
  "title": "RestaurantBookingRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["restaurantId", "date", "time", "partySize", "contact"],
  "properties": {
    "restaurantId": {
      "type": "string",
      "description": "Unique identifier of the restaurant"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Booking date (YYYY-MM-DD)"
    },
    "time": {
      "type": "string",
      "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
      "description": "Booking time (HH:mm)"
    },
    "partySize": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of guests"
    },
    "contact": {
      "oneOf": [
        {
          "type": "string",
          "format": "email",
          "description": "Contact email address"
        },
        {
          "type": "string",
          "pattern": "^[\\+]?[(]?[0-9]{1,4}[)]?[-\\s\\.]?[(]?[0-9]{1,4}[)]?[-\\s\\.]?[0-9]{1,9}$",
          "description": "Contact phone number"
        }
      ],
      "description": "Contact information - either email or phone number"
    },
    "specialRequests": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional notes for the restaurant"
    }
  }
}
